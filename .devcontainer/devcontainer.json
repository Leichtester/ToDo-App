{
  "name": "ToDo-App Codespace",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "remoteUser": "node",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {}
  },
  "postCreateCommand": "npm install",
  "forwardPorts": [4200],
  "customizations": {
    "vscode": {
      "extensions": [
        "angular.ng-template",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "mounts": [
    "source=node_modules,target=/workspaces/${localWorkspaceFolder}/node_modules,type=volume"
  ]
}